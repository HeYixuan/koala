  <update id="reduceStock" parameterType="org.igetwell.order.entity.SeckillProduct">
        UPDATE T_SECKILL_PRODUCT
        SET PROD_STOCK = PROD_STOCK - 1,
            VERSION = VERSION + 1
        WHERE
